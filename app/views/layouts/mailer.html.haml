!!!
%html
  %head
    %meta{:content => 'text/html; charset=utf-8', 'http-equiv' => 'Content-Type'}/
    :css
      html, body {
        padding: 0;
        margin: 0;
      }

      body {
        background-color: #edf1f8;
      }

      .container {
        max-width: 660px;
        margin: 0 auto;
        font-family: Helvetica,Arial,Sans-Serif,sans-serif;
        color: #323f53;
      }

      .content {
        background-color: #fff;
        border-radius: 10px;
        margin: 20px 0;
        padding: 20px;
      }

      .title {
        font-size: 2.2em;
      }

      footer {
        padding: 20px;
      }

      footer p {
        font-size: 0.8em;
        color: #687281;
      }
  %body
    .container
      .content
        %h1.title
          = @title
        %hr
        = yield
      %footer
        %p= I18n.t('mailers.signature', app_name: ENV['APP_NAME'])

