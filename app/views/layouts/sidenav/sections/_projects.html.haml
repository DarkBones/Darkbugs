- icon = @tenant == @current_user ? 'fa-user' : 'fa-lightbulb'

- if @projects.present?
  %a.nav-link{'aria-controls' => 'collapsePersonalProjects', 'aria-expanded' => 'true', 'data-target' => '#collapsePersonalProjects', 'data-toggle' => 'collapse', :href => 'javascript:void(0);'}
    .nav-link-icon
      %i.fa{ :class => icon }
    = t('views.sidenav.sections.projects.title')
    .sidenav-collapse-arrow
      %i.fas.fa-angle-down
  #collapsePersonalProjects.show{'data-parent' => '#accordionSidenav'}
    %nav#accordionSidenavPages.sidenav-menu-nested.nav.accordion
      - @projects.each do |project|
        = link_to project.name, project_path(key: project.key), class: 'nav-link'
