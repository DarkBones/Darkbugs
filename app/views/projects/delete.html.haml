= render partial: 'layouts/header',
  locals: { icon_class: 'fas fa-lightbulb',
            title: i18n('title', name: @project.name),
            title_sub: i18n('title_sub', name: @project.name) }

- content_for :page_title do
  = i18n('title')

= content_for :card_header do
  = i18n 'card_header', name: @project.name
= content_for :card_body do
  .rounded.p-2.alert-warning.alert-solid.mb-4
    = i18n 'warning', name: @project.name
  = simple_form_for(@project, url: project_destroy_path(@project.key), html: { method: :post }) do |f|
    .col-12
      .row
        = f.input :name, input_html: { value: '' }, placeholder: false, label: i18n('confirm', name: @project.name)
      .text-right
        = f.submit i18n('submit'), class: 'btn btn-danger'
