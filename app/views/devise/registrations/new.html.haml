-# - @user = User.new
- @user.build_user_profile
.col-lg-7
  .card.shadow-lg.border-0.rounded-lg.mt-5
    .card-header.justify-content-center
      %h3.font-weight-light.my-4
        = i18n 'title'
    .card-body
      .row
        .col-12
          = simple_form_for @user do |f|
            = render 'devise/shared/error_messages'
            = f.simple_fields_for :user_profile, :user_profile do |up|
              = up.input :username, autofocus: true, input_html: { autocomplete: 'off', value: params.dig(:user, :user_profile_attributes, :username) }
            = f.input :email, autocomplete: 'email'
            = f.input :password, input_html: { autocomplete: 'off', value: params.dig(:user, :password) }
            = f.input :password_confirmation, input_html: { autocomplete: 'off' }
            .mt-4.mb-0.col-12
              = f.submit i18n('submit'), class: 'btn btn-primary btn-block' # @TODO: replace_with
    .card-footer.text-center
      .small
        = link_to i18n('existing_account'), new_session_path(resource_name)
