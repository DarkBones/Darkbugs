.col-lg-5
  .card.shadow-lg.border-0.rounded-lg.mt-5
    .card-header.justify-content-center
      %h3.font-weight-light.my-4
        = t 'title'
    .card-body
      .small.mb-3.text-muted
        = t('instructions')
      = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        = render 'devise/shared/error_messages'
        = f.input :email, autofocus: true, autocomplete: 'email'
        .col-6
          = link_to t('return_to_login'), new_session_path(resource_name), class: 'small'
        .col-6.text-right
          = f.submit t('submit'), class: 'btn btn-primary' # @TODO: replace_with
    .card-footer.text-center
      .small
        = link_to t('no_confirmation'), new_confirmation_path(resource_name)
