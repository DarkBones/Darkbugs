.col-lg-5
  .card.shadow-lg.border-0.rounded-lg.mt-5
    .card-header.justify-content-center
      %h3.font-weight-light.my-4
        = i18n 'title'
    .card-body
      = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        = render partial: 'devise/shared/error_messages', locals: { include_flash: true }
        = f.hidden_field :reset_password_token
        = f.input :password, autofocus: true, autocomplete: 'new-password'
        = f.input :password_confirmation, autocomplete: 'new-password'
        .col-6
          = link_to i18n('return_to_login'), new_session_path(resource_name), class: 'small'
        .col-6.text-right
          = f.submit i18n('submit'), class: 'btn btn-primary' # @TODO: replace_with
    .card-footer.text-center
      .small
        = link_to i18n('no_confirmation'), new_confirmation_path(resource_name)
