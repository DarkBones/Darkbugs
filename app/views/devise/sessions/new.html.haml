.col-lg-5
  .card.shadow-lg.border-0.rounded-lg.mt-5
    .card-header.justify-content-center
      %h3.font-weight-light.my-4
        = i18n 'title'
    .card-body
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        = render partial: 'devise/shared/error_messages', locals: { include_flash: true }
        = f.input :email, autofocus: true, autocomplete: 'email', class: 'form-control py-4', placeholder: true
        = f.input :password, autocomplete: 'current-password', class: 'form-control py-4', placeholder: true
        .form-group.col-12
          .custom-control.custom-checkbox
            = f.check_box :remember_me, class: 'custom-control-input'
            = f.label :remember_me, class: 'custom-control-label'
        .col-6
          = link_to i18n('forgot_password'), new_password_path(resource_name), class: 'small'
        .col-6.text-right
          = f.submit i18n('submit'), class: 'btn btn-primary' # @TODO: replace_with
    .card-footer.text-center
      .small
        = link_to i18n('no_confirmation'), new_confirmation_path(resource_name)
        %br
        = link_to i18n('sign_up'), new_registration_path(resource_name)
