.col-lg-5
  .card.shadow-lg.border-0.rounded-lg.mt-5
    .card-header.justify-content-center
      %h3.font-weight-light.my-4
        Login
    .card-body
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-group
          = f.label :email, class: 'small mb-1'
          = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control py-4'
        .form-group
          = f.label :password, class: 'small mb-1'
          = f.password_field :password, autocomplete: 'current-password', class: 'form-control py-4'
        .form-group
          .custom-control.custom-checkbox
            = f.check_box :remember_me, class: 'custom-control-input'
            = f.label :remember_me, class: 'custom-control-label'
        .form-group.d-flex.align-items-center.justify-content-between.mt-4.mb-0
          = link_to "Forgot password?", new_password_path(resource_name), class: 'small'
          = f.submit "Login", class: 'btn btn-primary'
    .card-footer.text-center
      .small
        = link_to "Need an account? Sign up!", new_registration_path(resource_name)
